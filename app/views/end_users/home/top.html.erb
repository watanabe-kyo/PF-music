<div class="container">
	<div class="row">
	<div class="mx-auto">
	<h1>MyMusic</h1><br><br>
	<% if end_user_signed_in? %>
	    <%= form_with url: tracks_search_path, method: :get, local: true do |search| %>
      	  <%= search.text_field :term, class:"border border-dark rounded" %>
      	  <%= search.submit :search, class:"btn btn-outline-dark" %>
      	<% end %>

	<% else %>
	    <%= form_with model: @end_user, url: end_user_session_path, id: 'new_end_user', class: 'new_end_user', local: true do |f| %>
		  <div class="field">
		    <%= f.label :email, "メールアドレス" %><br />
		    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
		  </div>

		  <div class="field">
		    <%= f.label :password, "パスワード" %><br />
		    <%= f.password_field :password, autocomplete: "current-password" %>
		  </div>

		  <% if devise_mapping.rememberable? %>
		    <div class="field">
		      <%= f.check_box :remember_me %>
		      <%= f.label :remember_me, "ログインを保持" %>
		    </div>
		  <% end %>

		  <div class="actions">
		    <%= f.submit "LOGIN", class: "btn btn-outline-dark" %>
		  </div>
		<% end %>
		<br>

		<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		  <%= link_to "アカウントを登録（無料）", new_registration_path(resource_name), class:"btn btn-outline-danger" %><br />
		<% end %>

	<% end %>
	</div>
	</div>
</div>