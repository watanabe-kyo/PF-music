<div class="container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "end_users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"rounded" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "古いパスワード" %> <i>（パスワードの変更をしない場合は空白）</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"rounded" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"rounded" %>
    </div>

    <div class="field">
      <%= f.label :current_password, "現在のパスワード" %> <i></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"rounded" %>
    </div>

    <div class="actions">
      <%= f.submit "プロフィールを更新" %>
    </div>
  <% end %>

  <h3>退会</h3>

  <%= link_to "アカウントを削除", deactivate_path, class: "btn btn-danger" %><br>

  <%= link_to "MyPageへ戻る", end_user_path(current_end_user), class: "btn btn-dark" %>
</div>